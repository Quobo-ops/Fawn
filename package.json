{
  "name": "fawn",
  "version": "0.1.0",
  "description": "AI SMS Companion - Your life context in a text thread",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
